<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.gvsu.cis.radeckia.python.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/one"
        android:layout_marginBottom="108dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="13dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/two"
        android:layout_alignTop="@+id/three"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:layout_marginRight="13dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/three"
        android:layout_alignTop="@+id/one"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/four"
        android:layout_alignTop="@+id/three"
        android:layout_centerHorizontal="true" />

        <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/five"
            android:layout_alignTop="@+id/six"
            android:layout_toLeftOf="@+id/six"
            android:layout_toStartOf="@+id/six"
            android:layout_marginRight="13dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/six"
        android:layout_alignTop="@+id/seven"
        android:layout_toLeftOf="@+id/seven"
        android:layout_toStartOf="@+id/seven"
        android:layout_marginRight="13dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/seven"
        android:layout_alignTop="@+id/one"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"></GridLayout>
</RelativeLayout>
